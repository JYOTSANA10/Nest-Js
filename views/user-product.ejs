<!DOCTYPE html>

<head>
    <title></title>
    <style>
        .product__listing__section {
            padding: 30px 0 60px;
        }

        .product__listing__section .row {
            display: flex;
            align-items: flex-start;
        }

        .product__list__col {
            width: 20%;
        }

        .product__box__col {
            width: 80%;
        }

        .product__list__categories,
        .product_listing_box {
            box-shadow: 0 3px 6px rgba(0, 0, 0, 0.16);
            border-radius: 10px;
            border: 1px solid #dddddd;
        }

        .product__list__categories .categories_list-title,
        .product_listing_box .categories_box-title {
            padding: 20px 20px 0px;
            width: 100%;
        }

        .product__list__categories .categories_list-title h6,
        .product_listing_box .categories_box-title h6 {
            font-size: 18px;
            line-height: 34px;
            font-weight: 700;
            letter-spacing: 0.45px;
            color: #280f43;
            border-bottom: 1px solid #dddddd;
            padding-bottom: 5px;
        }

        .product__list__categories .categories_list {
            list-style: none;
            margin: 0;
            padding: 0;
            position: relative;
        }

        .product__list__categories .categories_list:before {
            content: "";
            position: absolute;
            left: 0;
            right: 0;
            top: 0;
            bottom: 0;
            width: 100%;
            height: 100%;
            border-radius: 10px;
            border: 1px solid #707070;
            background-color: #4f2982;
            opacity: 0.05;
        }

        .product__list__categories .categories_list {
            margin: 0;
            padding: 0;
        }

        .product__list__categories .categories_list li a {
            display: flex;
            align-items: center;
            justify-content: space-between;
            flex-direction: row;
            text-decoration: none;
            font-size: 20px;
            line-height: 38px;
            font-weight: 600;
            letter-spacing: 0.5px;
            color: #333333;
            transition: all 0.4s ease-in-out;
            padding: 5px 20px;
            position: relative;
        }

        .product__list__categories .categories_list li a span:last-child {
            font-size: 16px;
            line-height: 38px;
            font-weight: 400;
            letter-spacing: 0.4px;
        }

        .product__list__categories .categories_list li a:hover,
        .product__list__categories .categories_list li a.selected {
            color: #362280;
        }

        .product_listing_box .product_listing_row {
            display: flex;
            flex-wrap: wrap;
        }

        .product_listing_box .product_listing_col {
            width: 100%;
            max-width: 33.33%;
            padding: 0 30px;
        }

        .product_listing_box .product_listing_img {
            display: block;
            position: relative;
            max-width: 100%;
            width: 100%;
            height: auto;
            padding-top: 75%;
            position: relative;
            overflow: hidden;
            box-shadow: 0 3px 6px rgba(0, 0, 0, 0.16);
            border-radius: 10px;
            margin-bottom: 15px;
        }

        .product_listing_box .product_listing_img a {
            position: absolute;
            top: 0;
            left: 0;
            right: 0;
            bottom: 0;
            object-fit: cover;
            width: 100%;
            height: 100%;
            transition: all 0.4s ease-in-out;
        }

        .product_listing_box .product_listing_img a:hover {
            transform: scale(1.2);
        }

        .product_listing_box .product_listing_img img {
            position: absolute;
            top: 0;
            left: 0;
            right: 0;
            bottom: 0;
            object-fit: cover;
            width: 100%;
            height: 100%;
        }

        .product_listing_box .product-value {
            text-align: center;
            display: flex;
            flex-wrap: wrap;
            justify-content: center;
            margin-bottom: 25px;
            min-height: 76px;
            align-items: flex-end;
        }

        .product_listing_box .product-value .product-value-box {
            display: flex;
            justify-content: center;
            font-size: 16px;
            font-weight: 700;
            letter-spacing: 0.89px;
            color: #ffffff;
            width: auto;
            min-width: 85px;
            padding: 4px 8px;
            border-radius: 3px;
        }

        .product_listing_box .product-value .product-value-box.value-special {
            background-color: #552e91;
        }

        .product_listing_box .product-value .product-value-box.value-new {
            background-color: #e56db1;
        }

        .product_listing_box .product-value .product-value-box.value-coming-soon {
            background-color: transparent;
            border-radius: 0;
            background-image: url(../images/coming-soon.png);
            width: 61px;
            height: 76px;
            background-size: 100%;
            background-repeat: no-repeat;
            background-position: center;
        }

        .product_listing_box .product_listing_content {
            text-align: center;
            padding-bottom: 5px;
            margin-bottom: 25px;
            border-bottom: 1px solid #dddddd;
        }

        .product_listing_box .product_listing_content h3,
        .product_listing_box .product_listing_content h3 a {
            font-size: 24px;
            line-height: 55px;
            font-weight: 700;
            letter-spacing: 1.2px;
            color: #333333;
            text-decoration: none;
            transition: all 0.4s ease-in-out;
            font-family: var(--BalboaFont);
        }

        .product_listing_box .product_listing_content h3 a:hover {
            color: #362280;
        }

        .product_listing_box .product_listing_info p {
            font-size: 18px;
            line-height: 26px;
            font-weight: 300;
            letter-spacing: 0.9px;
            color: #333333;
            text-decoration: none;
            transition: all 0.4s ease-in-out;
            font-family: var(--BalboaFont);
        }

        .product_listing_box .product_listing_price {
            font-size: 18px;
            line-height: 26px;
            font-weight: 300;
            letter-spacing: 0.9px;
            color: #333333;
            text-decoration: none;
            transition: all 0.4s ease-in-out;
            font-family: var(--BalboaFont);
        }

        .product_listing_box .product_listing_btn {
            text-align: center;
            margin-bottom: 30px;
        }

        .ingredient-section-full-container {
            padding-bottom: 30px;
        }

        .ingredient-section-full-container .container {
            max-width: 100%;
        }

        .ingredient-section-full-container .ingredient__box .ingredient__img {
            padding-right: 15px;
        }

        .ingredient-section-full-container .ingredient__box .ingredient__img .ingredient__img--inner {
            border-radius: 0;
            box-shadow: 0px 3px 6px #00000029;
        }

        .ingredient-section-full-container .buy-btn a {
            margin-top: 25px;
        }

        .ingredient-section-full-container .noun_meat_icon {
            width: 60px;
            height: 40px;
            background-image: url(../images/icon_noun_meat.svg);
            background-repeat: no-repeat;
            background-size: 100%;
            background-position: center;
            margin-left: 5px;
        }

        .ingredient-section-full-container .ingredient__contain h3 {
            font-size: 45px;
            line-height: 52px;
            letter-spacing: -1.07px;
            font-weight: 700;
            display: flex;
            align-items: center;
        }

        .ingredient-section-full-container .ingredient__contain h3 span {
            font-size: 30px;
            letter-spacing: -0.71px;
            margin-left: 5px;
        }

        .your_shopping_bag-box {
            background: #FFFFFF;
            box-shadow: 5px 5px 10px #00000029;
            border: 1px solid #DDDDDD;
            padding: 20px 25px;
            position: relative;
            ;
            right: -150px;
            top: 100%;
            margin-top: 25px;
            width: 100%;
            max-width: 380px;
        }

        .your_shopping_bag-box h3 {
            font-size: 24px;
            font-weight: 700;
            color: #180c34;
            line-height: inherit;
            text-align: center;
            margin-bottom: 22px;
            margin-top: 10px;
        }

        .your_shopping_bag-box ul.shopping_detail {
            list-style: none;
            margin: 0;
            padding: 0;
        }

        .your_shopping_bag-box ul.shopping_detail li.shopping_detail_iteam {
            display: flex;
            align-items: center;
            padding: 10px 0;
            border-bottom: 1px solid #EEEEEE;
        }

        .your_shopping_bag-box ul.shopping_detail li.shopping_detail_iteam:first-child {
            border-top: 1px solid #EEEEEE;
        }

        .your_shopping_bag-box ul.shopping_detail li.shopping_detail_iteam .shopping_detail_iteam--img {
            display: block;
            position: relative;
            max-width: 100px;
            width: 100%;
            height: 100px;
            position: relative;
            overflow: hidden;
            box-shadow: 0 3px 6px rgba(0, 0, 0, 0.16);
            border-radius: 5px;
            border: 1px solid #4f2982;
        }

        .your_shopping_bag-box ul.shopping_detail li.shopping_detail_iteam .shopping_detail_iteam--img img {
            position: absolute;
            top: 0;
            left: 0;
            right: 0;
            bottom: 0;
            object-fit: cover;
            width: 100%;
            height: 100%;
        }

        .your_shopping_bag-box ul.shopping_detail li.shopping_detail_iteam .shopping_detail_iteam--col {
            margin-left: -100px;
            width: 100%;
            padding-left: 115px;
            position: relative;
        }

        .your_shopping_bag-box ul.shopping_detail li.shopping_detail_iteam .close_iteam {
            position: absolute;
            right: 10px;
            top: 5px;
        }

        .your_shopping_bag-box ul.shopping_detail li.shopping_detail_iteam .close_iteam a {
            color: #180c34;
            text-decoration: none;
            display: flex;
            transition: all 0.4s ease-in-out;
            line-height: 10px;
            font-size: 20px;
        }

        .your_shopping_bag-box ul.shopping_detail li.shopping_detail_iteam .close_iteam a:hover {
            color: #e56db1;
        }

        .your_shopping_bag-box ul.shopping_detail li.shopping_detail_iteam h4 {
            font-size: 14px;
            font-weight: 900;
            color: #180c34;
            line-height: inherit;
            margin-bottom: 8px;
            padding-right: 30px;
        }

        .your_shopping_bag-box ul.shopping_detail li.shopping_detail_iteam .shopping_detail_value_price {
            display: flex;
            align-items: center;
            justify-content: flex-start;
        }

        .your_shopping_bag-box ul.shopping_detail li.shopping_detail_iteam .shopping_detail_value {
            display: flex;
            padding-right: 30px;
            position: relative;
        }

        .your_shopping_bag-box ul.shopping_detail li.shopping_detail_iteam .shopping_detail_value:before {
            content: "";
            position: absolute;
            right: 10px;
            top: 50%;
            width: 4px;
            height: 4px;
            border-radius: 2px;
            margin-top: -2px;
            background-color: #B1B1B1;
        }

        .your_shopping_bag-box ul.shopping_detail li.shopping_detail_iteam .shopping_detail_value span {
            display: flex;
            align-items: center;
            justify-content: center;
            width: 22px;
            height: 22px;
            border: 1px solid #DDDDDD;
            font-size: 12px;
            color: #B1B1B1;
        }

        .your_shopping_bag-box ul.shopping_detail li.shopping_detail_iteam .shopping_detail_price span {
            display: flex;
            font-size: 14px;
            font-weight: 700;
            color: #180c34;
        }

        .your_shopping_bag-box ul.shopping_detail li.shopping_detail_total {
            display: flex;
            align-items: center;
            justify-content: space-between;
            padding: 10px 25px;
            border-bottom: 1px solid #EEEEEE;
        }

        .your_shopping_bag-box ul.shopping_detail li.shopping_detail_total .shopping_detail_total--title,
        .your_shopping_bag-box ul.shopping_detail li.shopping_detail_total .shopping_detail_total--price {
            display: flex;
            font-size: 14px;
            font-weight: 900;
            color: #180c34;
        }

        .your_shopping_bag-box ul.shopping_detail li.shopping_detail_total .shopping_detail_total--price {
            font-weight: 700;
        }

        .your_shopping_bag-box .shopping_detail-btns {
            display: flex;
            align-items: center;
            justify-content: center;
            flex-wrap: wrap;
            margin-top: 30px;
        }

        .your_shopping_bag-box .shopping_detail-btns .ui-btn {
            margin-bottom: 15px;
            min-width: 230px;
            padding-left: 20px;
            padding-right: 20px;
        }
    </style>
</head>

<body>
    
    <div class="cart_button">
        <a href="/carts/user-cart">Show Cart</a>
    </div>
    <div class="product__box__col">
        <div class="product_listing_box">
            <div class="categories_box-title">
                <h6>Butcher Shop | Showing 1-3 of 3 items</h6>
            </div>
            <div class="product_listing_row">

                <% for(var i=0; i <product.length; i++) { %>
                    <div class="product_listing_col">
                        <div class="product_listing_img">                    
                            <a href="">
                                
                                <img src="/uploads/<%=product[i].image%>" alt=""> </a>
                           
                        </div>
                        <div class="product_listing_content">
                            <h3><a href="">
                                    <%=product[i].name%>
                                </a></h3>
                            <div class="product_listing_info">
                                <p>
                                    <%=product[i].description%>
                                </p>
                            </div>
                            <div class="product_listing_price">
                                <%=product[i].price%>
                            </div>
                        </div>
                        <input type="hidden" name="id" value="<%=product[i].id%>" hidden>
                        <div class="product_listing_btn" onclick="addToCart('<%=product[i].id%>')">
                            ADD TO CART
                        </div>
                    </div>
                    <%} %>


            </div>
        </div>
    </div>
    <script>

        async function addToCart(id){
            // alert("cart");
            
            await fetch(`/carts/cart?id=${id}`,{
                method:'POST'
            })
